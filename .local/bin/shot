#!/bin/sh

name=${1:-scrot}

filename="${name}-`date "+%y%m%d-%H%M%S"`.png"

#echo "Uname: `uname -mrs`"
echo "Uname: `uname -a`"
echo "Uptime: `uptime`"
echo
echo "Smile! :)"
echo

scrot -c -d5 -q0 ${filename}

echo "${filename} shot!"

echo "Uploading..."
scp "${filename}" kethor:/srv/www/foo/screenshots
echo "Uploaded to http://devnull.sig11.fr/screenshots/${filename}"
